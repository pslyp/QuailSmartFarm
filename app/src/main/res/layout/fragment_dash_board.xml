<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6f6f6"
    android:padding="16dp"
    tools:context=".DashBoardFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_layout_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal">

                <com.dd.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:sl_cornerRadius="0dp"
                    app:sl_dx="3dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="#1D000000"
                    app:sl_shadowRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fc_lamoon_regular"
                            android:text="Lamp"
                            android:textSize="33sp" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/light" />

                        <ImageView
                            android:id="@+id/image_view_lamp_status"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_status_red" />

                    </LinearLayout>

                </com.dd.ShadowLayout>

                <TextView
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <com.dd.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:sl_cornerRadius="0dp"
                    app:sl_dx="3dp"
                    app:sl_dy="5dp"
                    app:sl_shadowColor="#1D000000"
                    app:sl_shadowRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fc_lamoon_regular"
                            android:text="@string/text_fan"
                            android:textColor="#4D4D4D"
                            android:textSize="33sp" />

                        <ImageView
                            android:id="@+id/image_view_fan_status"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/fan" />

                        <LinearLayout
                            android:id="@+id/linear_layout_fan_status"
                            android:layout_width="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="25dp"
                            android:background="@drawable/shape_status_green"
                            android:gravity="center"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>

                </com.dd.ShadowLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fc_lamoon_regular"
                android:text="Feed"
                android:textSize="33dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#A8AAB7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/contrast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/fc_lamoon_regular"
                android:text="@string/text_brightness"
                android:textColor="#4D4D4D"
                android:textSize="33sp" />

            <TextView
                android:id="@+id/text_view_bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/fc_lamoon_regular"
                android:text="120%"
                android:textColor="#4D4D4D"
                android:textSize="45sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:src="@drawable/temperature" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/fc_lamoon_regular"
                android:text="@string/text_temperature"
                android:textColor="#4D4D4D"
                android:textSize="33sp" />

            <TextView
                android:id="@+id/text_view_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/fc_lamoon_regular"
                android:text="27'C"
                android:textColor="#4D4D4D"
                android:textSize="45sp" />

        </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_no_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_no_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No Dashboard"
            android:textSize="30sp" />

    </RelativeLayout>

</RelativeLayout>