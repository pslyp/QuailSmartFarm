<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E0B28D"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image_view_account"
                    android:layout_width="85sp"
                    android:layout_height="85sp"
                    app:civ_border_width="0sp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="1"
                    app:civ_shadow_color="#8a795d"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/linear_add_photo"
                    android:layout_width="85sp"
                    android:layout_height="85sp"
                    android:gravity="center"
                    android:background="@drawable/shape_status_default">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        app:srcCompat="@drawable/ic_add_a_photo_white_24dp"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="Name" />

            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="Email" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_sign_out"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="16sp"
            android:layout_below="@+id/linear_layout_1"
            android:background="@drawable/selector_bg_button_brown"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Sign out"
            android:textSize="14sp"
            android:textColor="#000000"/>

    </RelativeLayout>

</LinearLayout>